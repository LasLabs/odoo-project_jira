<openerp>
<data>

<record model="ir.ui.view" id='project_jira_oauth_wizard'>
    <field name='name'>authorize.jira.oauth.wizard</field>
    <field name='model'>project.jira.oauth</field>
    <field name='arch' type='xml'>
        
        <field invisible='1' name='state'/>
        
        <form string='Create OAuth Connection' states='new'>
            <group>
                <field name='name' string='Name of instance'/>
                <field name='uri' string='Base URI of JIRA Instance (e.g. https://example.com/jira)'/>
            </group>
            <footer>
                <button special='cancel' string='Cancel'/>
                <button name='_do_oauth_leg_1' type='object' string='Create' class='oe_highlight'/>
            </footer>
        </form>
        
        <form string='Authorize OAuth (Leg 2)' states='leg_2'>
            <group>
                <field name='auth_uri' string='Visit This URI, Authorize, Then Click Continue' readonly='True'/>
            </group>
            <footer>
                <button special='cancel' string='Cancel'/>
                <button name='_do_oauth_leg_3' type='object' string='Continue (Only After Above Authorization)' class='oe_highlight'/>
            </footer>
        </form>
        
        <form string='Authorize OAuth (Leg 2)' states='leg_2'>
            <h2>OAuth has already been configured.</h2>
        </form>
        
    </field>
</record>

</data>
</openerp>